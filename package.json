{
  "name": "sponge-phaser-3.0-luigi",
  "version": "1.0.3",
  "description": "A Phaser 3 Typescript Setup with useful common funtionallity",
  "main": "src/index.js",
  "scripts": {
    "help": "node scripts/help.js",
    "build": "webpack",
    "dev": "npm run build && webpack-dev-server -d --port=8081 --open-page webpack-dev-server/build/",
    "docs": "typedoc --includeDeclarations --includes ./phaser.d.ts --ignoreCompilerErrors --excludeExternals --out ./docs/ ./src/ && http-server docs -c-1 -o",
    "upgrade": "npm i --save phaser@latest && node scripts/update-ts-definitions.js",
    "export-assets": "estoolkit.exe -run ./scripts/make_assets_illustrator.jsx",
    "generate-atlas": "TexturePacker --sheet build/assets.png --data build/assets.json --format phaser --multipack --shape-padding 2 --border-padding 2 --trim-mode Trim assets/img",
    "generate-svg-atlas": "svg-sprite --view --view-render-css --view-render-css-template ./supporting/atlas-template.json.hbs --view-render-css-dest atlas.json --view-dest ./assets/atlas --view-sprite atlas.svg assets/svg/*.svg && MOVE .\\assets\\atlas\\atlas.json.css .\\assets\\atlas\\atlas.json",
    "new-asset": "node scripts/make_asset.js",
    "lint": "tslint -- src/**/*.ts",
    "fixlint": "tslint --fix src/**/*.ts",
    "generate-schema": "typescript-json-schema src/models/**/*.ts * --titles --aliasRefs --ignoreErrors -o json.schema"
  },
  "repository": {
    "type": "git",
    "url": "git@git.spongeuk.com:sponge/boilerplates/sponge-phaser-3.0-luigi.git"
  },
  "author": "Rich Searle - Hypertrifle.com",
  "license": "UNLICENCED",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "copy-webpack-plugin": "^4.5.2",
    "filewatcher-webpack-plugin": "^1.2.0",
    "jshint": "^2.9.5",
    "jshint-loader": "^0.8.4",
    "npm-scripts-help": "^0.8.0",
    "raw-loader": "^0.5.1",
    "readline-sync": "^1.4.9",
    "svg-sprite": "^1.5.0",
    "ts-loader": "^3.5.0",
    "typescript": "^2.8.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.11.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "babel-loader": "^7.1.4",
    "http-server": "^0.11.1",
    "path-override-webpack-plugin": "^0.1.2",
    "phaser": "^3.12.0",
    "strip-json-comments": "^2.0.1",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript-json-schema": "^0.32.0"
  }
}
