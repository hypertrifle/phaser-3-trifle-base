{
  "name": "sponge-phaser-3.0-luigi",
  "version": "1.0.1",
  "description": "A Phaser 3 Typescript Setup with useful common funtionallity",
  "main": "src/index.js",
  "scripts": {
    "help": "node scripts/help.js",
    "build": "webpack",
    "dev": "npm run build && webpack-dev-server -d --port=8081 --open-page webpack-dev-server/",
    "upgrade": "npm i --save phaser@latest && node scripts/update-ts-definitions.js",
    "export-assets": "estoolkit.exe -run ./scripts/make_assets_illustrator.jsx",
    "generate-atlas": "TexturePacker --sheet build/assets.png --data build/assets.json --format phaser --multipack --shape-padding 2 --border-padding 2 --trim-mode Trim assets/img",
    "new-asset": "node scripts/make_asset.js",
    "tslint": "tslint -- src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@git.spongeuk.com:sponge/boilerplates/sponge-phaser-3.0-luigi.git"
  },
  "author": "Rich Searle - Hypertrifle.com",
  "license": "UNLICENCED",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "copy-webpack-plugin": "^4.5.2",
    "filewatcher-webpack-plugin": "^1.2.0",
    "jshint": "^2.9.5",
    "jshint-loader": "^0.8.4",
    "npm-scripts-help": "^0.8.0",
    "raw-loader": "^0.5.1",
    "readline-sync": "^1.4.9",
    "ts-loader": "^3.5.0",
    "typescript": "^2.8.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.11.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {
    "babel-loader": "^7.1.4",
    "phaser": "^3.12.0-beta3",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0"
  }
}
