{
  "name": "hypertrifle-phaser-tempalte",
  "version": "1.1.0",
  "description": "A Phaser 3 Typescript Setup with useful common funtionallity",
  "main": "src/index.js",
  "scripts": {
    "help": "node scripts/help.js",
    "dev": "webpack-dev-server --mode development --open-page webpack-dev-server/build/ --host 192.168.178.22 --config webpack.config.js",
    "build": "webpack --config webpack.config.js --mode production",
    "pre-dev": "npm run generate-svg-atlas",
    "generate-atlas": "TexturePacker --sheet assets/atlas/atlas.png --data assets/atlas/atlaspng.json --format phaser --multipack --shape-padding 2 --border-padding 2 --trim-mode Trim assets/img",
    "generate-svg-atlas": "svg-sprite  --shape-spacing-padding 2,2,2,2 --view --view-render-css --view-render-css-template ./supporting/atlas-template.json.hbs --view-render-css-dest atlas.json --view-dest ./assets/atlas --view-sprite atlas.svg assets/svg/**/*.svg && MOVE .\\assets\\atlas\\atlas.json.css .\\assets\\atlas\\atlas.json && MOVE .\\assets\\atlas\\atlas-*.svg .\\assets\\atlas\\atlas.svg",
    "upgrade": "npm i --save phaser@latest && node scripts/update-ts-definitions.js",
    "lint": "tslint --fix src/**/*.ts",
    "docs": "typedoc --includeDeclarations --includes ./phaser.d.ts --ignoreCompilerErrors --excludeExternals --out ./docs/ ./src/ && http-server docs -c-1 -o",
    "generate-schema": "typescript-json-schema src/interfaces/test.ts * --titles --defaultProps --ignoreErrors --propOrder -o schema.json"
  },
  "repository": {
    "type": "git",
    "url": "git@git.spongeuk.com:sponge/boilerplates/sponge-phaser-3.0-luigi.git"
  },
  "author": "Rich Searle - hypertrifle.com",
  "license": "UNLICENCED",
  "private": true,
  "devDependencies": {
    "@types/activex-excel": "^14.0.4",
    "@types/dat.gui": "^0.7.2",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "copy-webpack-plugin": "^4.5.2",
    "filewatcher-webpack-plugin": "^1.2.0",
    "ghooks": "^2.0.4",
    "jshint": "^2.9.5",
    "jshint-loader": "^0.8.4",
    "npm-scripts-help": "^0.8.0",
    "prettier": "^1.14.3",
    "raw-loader": "^0.5.1",
    "readline-sync": "^1.4.9",
    "svg-sprite": "^1.5.0",
    "ts-loader": "^5.3.2",
    "typescript": "^2.8.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "@types/stats.js": "^0.17.0",
    "babel-loader": "^7.1.4",
    "dat.gui": "^0.7.2",
    "easystarjs": "^0.4.3",
    "http-server": "^0.11.1",
    "phaser": "^3.15.1",
    "strip-json-comments": "^2.0.1",
    "stripcomment-loader": "^0.1.0",
    "svgo": "^1.1.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript-json-schema": "^0.32.0"
  }
}
