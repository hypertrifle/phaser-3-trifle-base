{
  "name": "hypertrifle-phaser-tempalte",
  "version": "1.1.0",
  "description": "A Phaser 3 Typescript Setup with useful common funtionallity",
  "main": "src/index.js",
  "scripts": {
    "help": "node scripts/help.js",
    "dev": "webpack-dev-server --mode development --open-page webpack-dev-server/build/ --hot --inline --config webpack.config.js",
    "build": "webpack --config webpack.config.js --mode production",
    "upgrade": "npm i --save phaser@latest && node scripts/update-ts-definitions.js",
    "build-ci": "webpack --config webpack.config.js --mode production --env.NODE_ENV=ci",
    "lint": "tslint --fix src/**/*.ts",
    "docs": "typedoc --includeDeclarations --includes ./phaser.d.ts --ignoreCompilerErrors --excludeExternals --out ./docs/ ./src/ && http-server docs -c-1 -o",
    "generate-schema": "typescript-json-schema ./src/models/**/*.ts GameData --titles -o game.schema"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:/hypertrifle/phaser-3-trifle-base.git"
  },
  "author": "Rich Searle - hypertrifle.com",
  "license": "UNLICENCED",
  "private": true,
  "devDependencies": {
    "@types/dat.gui": "^0.7.2",
    "@types/stats.js": "^0.17.0",
    "babel-loader": "^7.1.4",
    "ts-loader": "^5.3.2",
    "typescript-json-schema": "^0.34.0",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@types/webfontloader": "^1.6.29",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "copy-webpack-plugin": "^4.5.2",
    "dat.gui": "^0.7.2",
    "glsl-noise": "0.0.0",
    "glslify": "^7.0.0",
    "glslify-loader": "^2.0.0",
    "phaser": "^3.15.1",
    "raw-loader": "^0.5.1",
    "strip-json-comments": "^2.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.8.1",
    "webfontloader": "^1.6.28",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2"
  }
}
