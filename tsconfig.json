{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es5", "es6", "dom"]
  },
  "files": [
    "node_modules/phaser/types/phaser.d.ts",
    "types/spine-core.d.ts"
  ],
  "include": [
    "src/**/*.ts", "KEEP/FontModels.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "scripts/*.*",
    "examples_and_snippets/*.*",
    "assets/*.*"
  ]
}