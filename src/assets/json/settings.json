
{
      "save": {
            "identifier": "spygame",
            "version": "0.0.2",
            "shouldPersistData": false
      },
      "global": {
            "debugMode":true
      },

      "titleScene": {
            "backgroundColor": "0x450710"
      },

      "scaling": {
            "resizeToParent": true,
            "expandToParent": true,
            "shouldForceOrientationOnMobile": true,
            "shouldForceLandscaprOnMobile": true
      },

      "HUDOverlay": {
            "shouldShowSettings": true,
            "hideDelay": 1
      },
      
      "debugOverlay": {
            "showBrowserSpecificion": true,
