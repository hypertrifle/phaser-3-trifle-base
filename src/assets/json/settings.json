                  "radius": 0,
                  "colors": {
                        "primary": "#F34939",
                        "secondary": "#FEBD19",
                        "hover":  "#F25F52",
                        "disabled": "#AAAAAA"
                  }
            },
            "buttons": {}
      },
      "test": {
            "priority": "settings"
      },
      "fonts": {
            "h1": {
                  "font": "Arial, Helvetica, sans-serif",
